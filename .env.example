# Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit real credentials to version control

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=habituser
POSTGRES_PASSWORD=habitpass123
POSTGRES_DB=habitsforgood

# Backend
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Frontend
API_URL=http://localhost:3000

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# SMTP Configuration (Optional - for email notifications)
# Get an app password from your Gmail account security settings
# DO NOT commit real credentials - only store placeholders in version control
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
API_URL_PUBLIC=http://localhost:3000/api
